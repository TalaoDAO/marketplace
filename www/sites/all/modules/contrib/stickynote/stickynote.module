  $stickynote->content += field_attach_view('stickynote', $stickynote, $view_mode);
  $note = nl2br(filter_xss($stickynote->note));

  // @todo This can't possibly be the correct way to output a base entity field
  $stickynote->content += array(
    'note' => array(
      '#theme' => 'field',
      '#weight' => '-999',
      '#access' => TRUE,
      '#title' => 'note',
      '#label_display' => 'above',
      '#object' => $stickynote,
      '#entity_type' => 'stickynote',
      '#language' => 'und',
      '#view_mode' => 'full',
      '#field_name' => 'note',
      '#bundle' => 'stickynote',
      '#field_type' => 'text',
      '#formatter' => 'text_default',
      '#items' => array(
        0 => array(
          'value' => $note,
          'format' => NULL,
          'safe_value' => $note,
        ),
      ),
      0 => array(
        '#markup' => $note,
      ),
    )
