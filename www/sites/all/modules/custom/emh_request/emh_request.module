 */
function emh_request_hook_info() {
  $hooks = array(
    'emh_request_option_info',
    'emh_request_option_info_alter',
    'emh_request_option_setting_form',
    'emh_request_options_costs_alter',
  );

  return array_fill_keys($hooks, array('group' => 'options'));
