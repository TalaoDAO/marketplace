/**
 * Close a node if needed.
 */
function emh_points_close_node($nid) {
  $node = node_load($nid);
  if (!empty($node)) {
    switch ($node->type) {
      case 'webform':
        $node->webform['status'] = 0;
        node_save($node);
        break;

      case 'question1':
        $node->comment = COMMENT_NODE_CLOSED;
        node_save($node);
        break;

      case 'challenge':
        $node->comment = COMMENT_NODE_CLOSED;
        node_save($node);
        break;

      default:
        // Nothing to do.
        break;
    }
  }
}

